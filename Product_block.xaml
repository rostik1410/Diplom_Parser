<UserControl x:Class="Diplom_Parser.Product_block"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Diplom_Parser"
             mc:Ignorable="d"
             Name="UI_block"
             d:DesignHeight="200" d:DesignWidth="150" MouseLeftButtonUp="UI_block_MouseLeftButtonUp">
    <Grid Background="#333">
        <Image Name="img" Height="100" Width="100" VerticalAlignment="Top" Margin="20"></Image>
        <TextBlock Name="Prod_name" Foreground="White" Height="70" VerticalAlignment="Bottom" Margin="0,0,0,5" Width="150" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
    </Grid>
</UserControl>
