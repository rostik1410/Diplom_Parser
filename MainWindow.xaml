<Window x:Class="Diplom_Parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_Parser"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#333">
        <TextBlock x:Name="textBlock1" 
                   HorizontalAlignment="Left" 
                   Margin="252,10,0,0" 
                   TextWrapping="Wrap" 
                   Text="TextBlock" 
                   VerticalAlignment="Top" 
                   Height="308" 
                   Width="607"/>
        <StackPanel Name="HamburgerMenu" 
                    Margin="-200,0,0,0" 
                    Background="#333" 
                    HorizontalAlignment="Left" 
                    Height="672" 
                    VerticalAlignment="Top" 
                    Width="250">
            <Label x:Name="label" 
                   Width="100"  
                   HorizontalAlignment="Center" 
                   Foreground="White" 
                   Content="Категорії" 
                   Margin="0,10,0,0" 
                   Height="50" 
                   HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Center" 
                   FontSize="20"/>
            <Image x:Name="menu_icon_png" 
                   Height="40"
                   Width="40" 
                   Source="images\menu_icon.png" 
                   Stretch="Fill"  
                   MouseDown="menu_icon_png_MouseDown" 
                   HorizontalAlignment="Right" 
                   Margin="0,-60,5,0"/>
            <Button x:Name="phone_btn" 
                    Content="Телефони" 
                    Background="#333" 
                    Foreground="White" 
                    Margin="30,10,30,1" 
                    Height="50" 
                    BorderThickness="0" 
                    FontSize="15" />
            <Button x:Name="notebook_btn" 
                    Content="Ноутбуки" 
                    Background="#333"
                    Foreground="White" 
                    Margin="30,1,30,1" 
                    Height="50" 
                    BorderThickness="0" 
                    FontSize="15"/>
            <Button x:Name="tv_btn" 
                    Content="Телевізори" 
                    Background="#333" 
                    Foreground="White" 
                    Margin="30,1,30,1" 
                    Height="50" 
                    BorderThickness="0" 
                    FontSize="15"/>
            <Button x:Name="phototech_btn" 
                    Content="Фото та відео техніка" 
                    Background="#333" 
                    Foreground="White" 
                    Margin="30,1,30,1" 
                    Height="50" 
                    BorderThickness="0" 
                    FontSize="15"/>
            <Button x:Name="button4" 
                    Content="Button" 
                    Background="#333" 
                    Foreground="White" 
                    Margin="30,1,30,1" 
                    Height="50"
                    BorderThickness="0" 
                    FontSize="15"/>
            <Button x:Name="button5" 
                    Content="Button" 
                    Background="#333" 
                    Foreground="White"
                    Margin="30,1,30,1" 
                    Height="50" 
                    BorderThickness="0" 
                    FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
